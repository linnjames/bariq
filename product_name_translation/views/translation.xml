<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_product_name" model="ir.ui.view">
        <field name="name">product.template.product.arabic</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
                <xpath expr="//div[@name ='options']" position="before">
                    <div class="oe_title">
                        <label for="name" string="Arabic Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="arabic_name" placeholder="e.g. Arab"/>
                            </div>
                        </h1>
                    </div>
                </xpath>
        </field>
    </record>

</odoo>